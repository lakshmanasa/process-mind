		<ee:transform doc:name="output of query" doc:id="47b4f541-18b6-4157-8c9a-603b06a73803">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<json-logger:logger doc:name="Logger" doc:id="f6513475-b413-49fc-b33c-74623dc48711" config-ref="JSON_Logger_Config" message="After Fecthing the data from three Objects, The payload is this ::::::"/>
		<ee:transform doc:name="mapping to database fields" doc:id="d851510a-1041-4aae-8dbd-2fe603413f07">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
var a= flatten(payload.compositeResponse.body.records) reduce($$ ++ $)
---
{
   "AccountName": a.Name,
   "AccountNumber": a.AccountId__c,
   "FirstName": a.FirstName__c,
   "LastName": a.LastName__c,
   "MiddleName": a.MiddleName__c,
   "Phone": a.Phone__c,
   "Email": a.QS_Bill_To_Email__c
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<json-logger:logger doc:name="Logger" doc:id="841d2396-8134-4fa1-826b-460eca7b2b25" config-ref="JSON_Logger_Config" message="After Fecthing the data from three Objects mapping to DB-SAPI, After Mapping the payload and inserting into DB, Before inserting the payload is this:::::"/>
