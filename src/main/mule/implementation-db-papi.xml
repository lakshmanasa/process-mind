		<choice doc:name="Choice" doc:id="506d2bd3-c976-4fe2-975f-aa7339cbb58b">
			<when expression="#[payload.affectedRows == 1]">
				<ee:transform doc:name="Based on billing Id updating status field In-Process to Complete" doc:id="77730056-76cb-4253-a777-fa0ad6e5d0da">
					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	"compositeRequest":[{
		"method": "PATCH",
		"url": "/services/data/v51.0/sobjects/BillingJunction__c/Id/" ++ vars.BillingId as String ,
		"referenceId": "a",
		"body": {
			IntegrationStatus__c: "Completed"
			
		}}]}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
				<json-logger:logger doc:name="Logger" doc:id="9e97eaaa-4414-485e-9627-6dfba716f62a" config-ref="JSON_Logger_Config" message="After inserting a record into DB, I'm going to update a Status field in Salesforce 'In-Progress' to 'Complete', before update a Status field the payload is this::::::" />
